@model DOTRONGHUY_2210900029_K22CNTT1.Models.quan_tri

@{
    ViewBag.Title = "Details";
}

<h2 class="text-center">Chi tiết tài khoản</h2>

<div class="container-cart-products">
    <div class="wrrapper-products-cart">
        <!-- Tên tài khoản -->
        <div class="name-products_cart">
            <dt>
                @Html.DisplayNameFor(model => model.tai_khoan)
            </dt>
            <dd>
                <span>@Html.DisplayFor(model => model.tai_khoan)</span>
            </dd>
        </div>

        <!-- Mật khẩu -->
        <div class="price-products_cart">
            <dt>
                @Html.DisplayNameFor(model => model.mat_khau)
            </dt>
            <dd>
                <span>@Html.DisplayFor(model => model.mat_khau)</span>
            </dd>
        </div>

        <!-- Trạng thái -->
        <div class="quanlity-products_cart">
            <dt>
                @Html.DisplayNameFor(model => model.trang_thai)
            </dt>
            <dd>
                <span>@(Model.trang_thai == 1 ? "Đang hoạt động" : "Không hoạt động")</span>
            </dd>
        </div>
    </div>
</div>

<!-- Hành động -->
<p class="text-center">
    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.tai_khoan }, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("Trở lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
</p>
