@model DOTRONGHUY_2210900029_K22CNTT1.Models.LoginViewModel

@{
    ViewBag.Title = "Đăng Nhập";
}

<div class="wrrapper-input" style="margin-left:auto; margin-right:auto; margin-top:20px">
    <div class="wrrapper-input_inner info-sign-up-in">
        <div class="input-header flex-center">
            <div class="flex-center desc-input_header">
                <div class="input-header_text">Đăng nhập</div>
                <div class="flex-center sign-up_QR">
                    <div class="sign-up_QR-title default">
                        Đăng nhập với mã QR
                    </div>
                    <a href="" class="sign-up_item">
                        <svg width="40" height="40" fill="none" class="item-QR">
                            <g clip-path="url(#clip0)">
                                <path fill-rule="evenodd" clip-rule="evenodd" d="M18 0H0v18h18V0zM3 15V3h12v12H3zM18 22H0v18h18V22zm-3 15H3V25h12v12zM40 0H22v18h18V0zm-3 15H25V3h12v12z" fill="#EE4D2D"></path>
                                <path d="M37 37H22.5v3H40V22.5h-3V37z" fill="#EE4D2D"></path>
                                <path d="M27.5 32v-8h-3v8h3zM33.5 32v-8h-3v8h3zM6 6h6v6H6zM6 28h6v6H6zM28 6h6v6h-6z" fill="#EE4D2D"></path>
                                <path fill="#fff" d="M-4.3 4l44 43.9-22.8 22.7-43.9-44z"></path>
                            </g>
                            <defs>
                                <clipPath id="clip0">
                                    <path fill="#fff" d="M0 0h40v40H0z"></path>
                                </clipPath>
                            </defs>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
        <div class="input-info">
            @using (Html.BeginForm("Login", "DTHquan_tri", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="input-info_wrrapper-user info-account">
                    <div class="info-inner flex-center">
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-label", placeholder = "Tài khoản", style = "max-width:340px;" })
                    </div>
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "form-message" })
                </div>

                <div class="input-info_wrrapper-user info-password">
                    <div class="info-inner flex-center">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-label", placeholder = "Mật khẩu", style = "max-width:340px;" })
                    </div>
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "form-message" })
                </div>

                <button type="submit" class="submit flex-center size-submit">Đăng nhập</button>
            }

            <div class="input-help flex-center">
                <a href="#" class="help-sign-up">Quên mật khẩu</a>
            </div>

            <div class="select-sign-up">
                <div class="another flex-center">
                    <div class="border-another"></div>
                    <div class="text-another">hoặc</div>
                    <div class="border-another"></div>
                </div>
                <div class="options-login flex-center">
                    <button type="button" class="option-login size-option flex-option">
                        <div class="option-login_item">
                            <i class="fa-brands fa-facebook login-item" style="color: #1877f2;"></i>
                        </div>
                        <div>Facebook</div>
                    </button>
                    <button type="button" class="option-login size-option flex-option">
                        <div class="option-login_item">
                            <i class="fa-brands fa-google login-item" style="color: #fbbc05;"></i>
                        </div>
                        <div>Google</div>
                    </button>
                </div>
            </div>
        </div>
        <div class="href-sign-in">
            <div class="flex-center desc-sign-in ">
                Bạn mới biết đến chúng tôi ? 
                <a href="@Url.Action("Register", "DTHquan_tri")" class="sign-in" style="margin-left: 6px; ">Đăng ký</a>
            </div>
        </div>

    </div>
</div>

